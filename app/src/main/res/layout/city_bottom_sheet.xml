<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_menu_shape"
    android:backgroundTint="#2E4053"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/viewMenu"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/okay_btn_bg"
        android:backgroundTint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="match_parent"
        android:hint="@string/city_name"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_location_city_24"
        android:drawablePadding="7dp"
        android:paddingStart="12dp"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:padding="3dp"
        android:background="@drawable/city_shape"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/setCityTextBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:backgroundTint="#03A9F4"
        android:layout_margin="20dp"/>

</LinearLayout>